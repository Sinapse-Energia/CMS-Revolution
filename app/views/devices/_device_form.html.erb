<% if @device.errors.any? %>
      <div class="alert alert-danger">
            There were some errors:
             <% @device.errors.full_messages.each do |message| %>
          <li class="red"><%= message %></li>
          <% end %>
      </div>
  <% end %><div class="panel-box">
  <div class="panel-head"></div>
  <div class="dc-management-form">
    <%= form_for(device, html: {class: 'form-horizontal', multipart: true}) do |f| %>
        <div class="form-group">
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Name:</label>
                <%= f.text_field :name, class: 'form-control', placeholder: 'Device Name Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Id Code:</label>
                <%= f.text_field :id_code, class: 'form-control', placeholder: 'Device ID Code Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Id Communication:</label>
                <%= f.text_field :id_communication, class: 'form-control', placeholder: 'Device ID Communication Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Location:</label>
                <%= f.text_field :location, class: 'form-control', placeholder: 'Device location Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Latitude:</label>
                <%= f.text_field :latitude, class: 'form-control', id: 'latitude', placeholder: 'Device latitude Here', required: true %>
              <span id="validation1" class="clearBtn"></span>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Longitude:</label>
                <%= f.text_field :longitude, class: 'form-control',id: 'longitude',  placeholder: 'Device longitude Here', required: true %>
              <span id="validation2" class="clearBtn"></span>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Altitude:</label>
                <%= f.text_field :altitude, class: 'form-control', id: 'altitude',  placeholder: 'Device altitude Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Date Installed:</label>
                <%= f.text_field :date_installation, class: 'form-control datepicker', id: 'picker', placeholder: 'Device altitude Here', required: true  %> 
               
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Circuit Number:</label>
                <%= f.text_field :circuit_number, class: 'form-control', placeholder: 'Device Circuit Number Here', required: true %>
                <span id="circuit_validation" class="clearBtn" style="margin-top: 15px"></span>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Name Street:</label>
                <%= f.text_field :name_street, class: 'form-control', placeholder: 'Device Name Street Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Number Street:</label>
                <%= f.text_field :number_street, class: 'form-control', placeholder: 'Device Number Street Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Power Installed:</label>
                <%= f.text_field :power_installed, class: 'form-control', placeholder: 'Device Power Installed Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Power Contracted:</label>
                <%= f.text_field :power_contracted, class: 'form-control', placeholder: 'Device Power Contracted Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Id Supply Contract:</label>
                <%= f.text_field :id_supply_contract, class: 'form-control', placeholder: 'Deviceid Supply Contract Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>lock Brand:</label>
                <%= f.text_field :clock_brand, class: 'form-control', placeholder: 'Device Clock Brand Here', required: true %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 mb-xs-15">
            <div class="row">
              <div class="col-xs-12 mb-15">
                <label>Clock Model:</label>
                <%= f.text_field :clock_model, class: 'form-control', placeholder: 'Device Clock Model Here', required: true %>
              </div>
            </div>
          </div>
        </div>
          <div class="form-group">
            <div class="row ">
               <div class="col-xs-12">
                  <div class="col-xs-4 text-center">
                   <%= link_to "BACK", get_device_path, remote: true , :class => "btn submit-btn-green device-submit" %>
                  </div>
                  <div class="col-xs-4"></div>
                  <div class="col-xs-4 btn-center">
                    <%= f.hidden_field :user_id, value: session[:user_id] %>
                    <button type="submit" class="btn submit-btn-green device-submit" id="submit">Submit</button>
                    <span id="validation3" class="clearBtn"></span>
                  </div>
              </div>
            </div>
          </div>
    <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("#picker").datepicker({
    dateFormat: "dd-mm-yy",
    todayBtn: true,
    autoclose: true
  });

  $("#latitude").on("keyup keydown",function(e){
    var latitude_range = $(this).val();
    data = "latitude range is between -90 to +90"
    if(latitude_range < -90){
      $(this).val(-90);
      $("#validation1").html(data).fadeIn('slow')
      $("#validation1").show()
    }else if(latitude_range > 90){
      $(this).val(90);
      $("#validation1").html(data).fadeIn('slow')
      $("#validation1").show()
    }else{
      $('#validation1').hide()
    }
  })

  $("#longitude").on("keyup keydown",function(e){
    var longitude_range = $(this).val();
    data = "longitude range is between -180 to +180"
    if(longitude_range < -180){
      $(this).val(-180);
      $("#validation2").html(data).fadeIn('slow')
      $("#validation2").show()
    }else if(longitude_range > 180){
      $(this).val(180);
      $("#validation2").html(data).fadeIn('slow')
      $("#validation2").show()
    }else{
      $("#validation2").hide()
    }
  })

  $("#device_circuit_number").on("keyup keydown",function(e){
    var device_circuit_number_range = $(this).val();
    data = "Number of circuits managed by the CMC. Minimum = 0, Maximum = 7"
    if(device_circuit_number_range < 0){
      $(this).val(0);
      $("#circuit_validation").html(data).fadeIn('slow')
      $('#circuit_validation').delay(500).fadeOut('slow');
      $("#circuit_validation").show()
    }else if(device_circuit_number_range > 7){
      $(this).val(7);
      $("#circuit_validation").html(data).fadeIn('slow')
      $('#circuit_validation').delay(500).fadeOut('slow');
      $("#circuit_validation").show()
    }else{
      $("#circuit_validation").hide()
    }
  })
</script>
